# =============================================================================
# AI Companion - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values.
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Active provider format: provider/model (e.g., ollama/llama3.2, openai/gpt-4o)
# Supported providers: ollama, lmstudio, openai, anthropic
ACTIVE_PROVIDER=ollama/llama3.2

# Cloud API Keys (REQUIRED if using cloud providers)
# Leave empty or remove if only using local providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Local Provider URLs
OLLAMA_BASE_URL=http://localhost:11434
LM_STUDIO_URL=http://localhost:1234

# -----------------------------------------------------------------------------
# TTS Server Configuration
# -----------------------------------------------------------------------------
TTS_HOST=localhost
TTS_PORT=8000
TTS_VOICE=en-US-AriaNeural

# -----------------------------------------------------------------------------
# Security Configuration (CRITICAL - UPDATE FOR PRODUCTION)
# -----------------------------------------------------------------------------
# JWT Secret - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# MUST be changed in production!
JWT_SECRET=

# CORS - Allowed origins (comma-separated)
# Update for production deployment
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENVIRONMENT=development
APP_PORT=3000
APP_DEBUG=false
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./data/companion.db
