{
  "name": "ai-companion",
  "version": "2.0.0",
  "description": "Privacy-centric AI companion with Live2D integration",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:python": "python -m flake8 backend_fastapi/ --max-line-length=100 --extend-ignore=E203,W503",
    "start:backend": "python -m backend_fastapi.main",
    "test:backend": "python -m pytest backend_fastapi/ -v --tb=short",
    "install:all": "npm install && pip install -r backend_fastapi/requirements.txt",
    "install:backend": "pip install -r backend_fastapi/requirements.txt",
    "prepare": "husky install && npm run setup:secrets",
    "setup:secrets": "bash scripts/setup-secrets.sh || echo 'Git-secrets setup skipped on Windows'",
    "start": "concurrently \"npm run start:backend\" \"npm run dev\""
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "axios": "^1.6.2",
    "concurrently": "^8.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.py": [
      "sh -c 'command -v flake8 >/dev/null 2>&1 && flake8 --max-line-length=100 --extend-ignore=E203,W503 \"$0\" || echo \"flake8 not installed, skipping Python lint\"'"
    ]
  }
}